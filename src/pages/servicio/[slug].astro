        </div>
        
        <div class="max-w-3xl mx-auto">
          <div class="bg-white p-8 rounded-lg shadow-sm">
            <ul class="space-y-4">
              {service.includes.map((item, index) => (
                <li 
                  class="flex items-start"
                  data-aos="fade-up"
                  data-aos-delay={index * 100}
