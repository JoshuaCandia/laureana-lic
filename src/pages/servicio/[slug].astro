import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";

const { service } = Astro.props;
---

<Layout 
  title={`${service.title} - Punto de Partida`}
  description={service.description}
>
  <Navbar />
  
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="py-16 bg-secondary/30">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div data-aos="fade-right">
            <div class="w-16 h-16 rounded-full bg-accent/20 flex items-center justify-center mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={service.icon} />
              </svg>
            </div>
            <h1 class="text-3xl md:text-4xl font-serif font-medium text-primary mb-6">
              {service.title}
            </h1>
            <p class="text-primary/80 text-lg leading-relaxed mb-8">
              {service.fullDescription}
            </p>
            <div class="flex flex-wrap gap-4">
              <a 
                href="#detalles" 
                class="inline-block bg-accent text-white px-6 py-3 rounded hover:bg-opacity-90 transition-all text-base font-medium"
              >
                Ver detalles
              </a>
              <a 
                href="/#contact" 
                class="inline-block border-2 border-accent text-accent px-6 py-3 rounded hover:bg-accent hover:text-white transition-all text-base font-medium"
              >
                Consultar ahora
              </a>
            </div>
          </div>
          
          <div data-aos="fade-left">
            <div class="aspect-[4/3] rounded-lg overflow-hidden shadow-lg">
              <img
                src={service.image}
                alt={service.title}
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Información General -->
    <section id="detalles" class="py-16">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
          <div class="text-center" data-aos="fade-up">
            <div class="w-16 h-16 rounded-full bg-accent/20 flex items-center justify-center mx-auto mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-medium text-primary mb-2">Dirigido a</h3>
            <p class="text-primary/80">{service.target}</p>
          </div>
          
          <div class="text-center" data-aos="fade-up" data-aos-delay="100">
            <div class="w-16 h-16 rounded-full bg-accent/20 flex items-center justify-center mx-auto mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-medium text-primary mb-2">Duración</h3>
            <p class="text-primary/80">{service.duration}</p>
          </div>
          
          <div class="text-center" data-aos="fade-up" data-aos-delay="200">
            <div class="w-16 h-16 rounded-full bg-accent/20 flex items-center justify-center mx-auto mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-medium text-primary mb-2">Modalidad</h3>
            <p class="text-primary/80">Presencial y Online</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Metodología -->
    <section class="py-16 bg-secondary/30">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12" data-aos="fade-up">
          <h2 class="text-2xl md:text-3xl font-serif font-medium text-primary mb-4">
            Metodología de Trabajo
          </h2>
          <div class="w-24 h-1 bg-accent mx-auto"></div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {service.methodology.map((step, index) => (
            <div 
              class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 flex items-start"
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              <div class="w-8 h-8 rounded-full bg-accent text-white flex items-center justify-center mr-4 flex-shrink-0 text-sm font-medium">
                {index + 1}
              </div>
              <p class="text-primary/80">{step}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Beneficios -->
    <section class="py-16">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12" data-aos="fade-up">
          <h2 class="text-2xl md:text-3xl font-serif font-medium text-primary mb-4">
            Beneficios del Servicio
          </h2>
          <div class="w-24 h-1 bg-accent mx-auto"></div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {service.benefits.map((benefit, index) => (
            <div 
              class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 text-center"
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
